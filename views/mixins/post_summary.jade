
include twitter_share_post

mixin post_summary(post, linkTitle)
	if (linkTitle !== undefined && linkTitle === true)
		h1: a(href=post.url)= post.title
	else
		h1= post.title
	div.post-metadata
		span.post-tags
			if post.tags && post.tags.length > 0
				|tags: 
				for tag in post.tags
					span.label
						i.icon.icon-tag
						=tag
		span.post-date
			i.icon.icon-time
			|posted #{post.date.toDateString()} 
			| 
		span.post-comments
			a(href=post.gist_url + "#comments")
				i.icon.icon-comment
				| #{post.comment_count} comments 
				| 
		span.post-github-link
			a(href=post.gist_url)
				i.icon.icon-eye-open
				| view on github 
				| 
		span.twitter_share_post
			| 
			mixin twitter_share_post(post)
